<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Administration des Employés</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Administration des Employés</h1>

    <!-- Formulaire pour ajouter un employé -->
    <h2>Ajouter un Employé</h2>
    <form id="employeeForm">
        <input type="text" id="firstName" placeholder="Prénom" required>
        <input type="text" id="lastName" placeholder="Nom" required>
        <input type="text" id="profile" placeholder="Profil">
        <input type="number" id="integration" placeholder="Année d'intégration">
        <input type="number" id="salary" placeholder="Salaire">
        <button type="submit">Ajouter</button>
    </form>

    <h2>Liste des Employés</h2>
    <ul id="employeeList"></ul>

    <!-- Formulaire pour modifier un employé (affiché uniquement lors de l'édition) -->
    <div id="editEmployeeContainer" style="display: none;">
        <h2>Modifier un Employé</h2>
        <form id="editEmployeeForm">
            <input type="text" id="editFirstName" placeholder="Prénom" required>
            <input type="text" id="editLastName" placeholder="Nom" required>
            <input type="text" id="editProfile" placeholder="Profil">
            <input type="number" id="editIntegration" placeholder="Année d'intégration">
            <input type="number" id="editSalary" placeholder="Salaire">
            <button type="submit">Mettre à jour</button>
            <button type="button" id="cancelEdit">Annuler</button>
        </form>
    </div>

    <script src="/js/app.js"></script>
</body>
</html>
